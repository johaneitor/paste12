/* --- Turbo-arcade tweaks -------------------------------------------------- */
:root{--magenta:#ff00ff;}
.magenta{color:var(--magenta);text-shadow:0 0 8px var(--magenta);}
.pixel-logo{width:96px;height:96px}
.btn-primary{background:var(--magenta);}
.btn-primary:hover{background:#ff33ff}
.pagination button:hover{background:var(--magenta);color:#fff}

